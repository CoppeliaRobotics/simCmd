<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<?xml-stylesheet type="text/xsl" href="callbacks.xsl"?>

<plugin name="simCmd" author="federico.ferri.it@gmail.com">
    <description>API functions for the Commander plugin.</description>
    <command name="setVisible">
        <description>Show or hide the widget</description>
        <params>
            <param name="b" type="bool">
                <description>if true the widget will be shown, otherwise it will be hidden</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="clearHistory">
        <description>Clear command history</description>
        <params>
        </params>
        <return>
        </return>
    </command>
    <command name="setExecWrapper">
        <description>Code to be executed will be passed as string argument to the specified function.</description>
        <params>
            <param name="wrapperFunc" type="string">
                <description>name of the function to handle script code execution</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="setSelectedScript">
        <description>Change the selected script (combo box).</description>
        <params>
            <param name="scriptHandle" type="int">
                <description>handle of the script</description>
            </param>
            <param name="lang" type="string" default='""'>
                <description>language (only applies to sandbox)</description>
            </param>
        </params>
        <return>
        </return>
    </command>
</plugin>
